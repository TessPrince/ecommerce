<h1 class="subtitle is-2">Shopping Cart</h1>

<% if cart.present? %>
  <% cart.each do |soap| %>
    <div class="box columns">
      <div class="column is-2">
        <% if soap.image.present? %>
          <%= link_to image_tag(soap.image, alt: soap.name, size:"200x300"), soap %>
        <% end %>
      </div>
      <div class="column is-four-fifth">
        <p class="subtitle is-3"><%= soap.name %></p>
        <p>Description: <%= soap.description %></p>
        <p>Price: <%= soap.price %></p>
        <div class="column is-2">
          <label for="quantity">Quantity:</label>
          <input type="text" id="quantity" name="quantity" class="input is-small">
        </div>
        <div class="column is-four-fifth">
          <%= button_to "Delete", cart_path(soap), class: "button is-dark is-small", method: :delete %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p>Cart is empty.</p>
<% end %>