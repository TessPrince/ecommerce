<h2 class="title is-2">Products</h2>
<%= form_with(url: search_soaps_path, method: :get, local: true) do %>
  <div class="field is-grouped mb-5">
    <div class="control is-expanded">
      <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search for soaps') %>
    </div>
    <div class="select">
      <%= select_tag "category", options_from_collection_for_select(Category.all, :id, :name), include_blank: true%>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is primary")%>
    </div>
  </div>
<% end %>
<ul>
<div class="columns is-multiline is-centered">
<% @soaps.each do |s| %>

    <div class="box is-one-third">
      <li class="subtitle is-4"><%= link_to s.name, s %></li>
      <% if s.image.present? %>
          <%= link_to image_tag(s.image, alt: s.name, size:"400x600", :class => "card-img-top"), s %>
      <% end %>
    </div>
<% end %>
</div>


  </div>
  <nav class="pagination" role="navigation" aria-label="pagination">
    <ul class="pagination-list">
      <%= paginate @soaps %>
    </ul>
  </nav>
</ul>